{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./out",        // Output directory for compiled files
      "rootDir": "./source",    // Root directory for TypeScript source files
      "strict": true            // Enable strict mode (optional)
    },
    "include": [
      "source/**/*"             // Include all TypeScript files in the 'source' folder
    ],
    "exclude": [
      "node_modules",           // Exclude node_modules
      ".vscode"                 // Exclude .vscode folder
    ]
  }