{
    "name": "fortify",
    "displayName": "Fortify - Fortran Formatter",
    "description": "A powerful and simple Fortran formatting tool for Visual Studio Code.",
    "version": "0.9.1",
    "publisher": "LouOberto",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Formatters"
    ],
    "main": "./source/extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/louoberto/fortify"
    },
    "contributes": {
        "languages": [
            {
                "id": "fortran",
                "extensions": [
                    ".f90",
                    ".f95",
                    ".f03",
                    ".f"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "fortran-modern",
                "extensions": [
                    ".f90",
                    ".f95",
                    ".f03",
                    ".f"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "FortranFreeForm",
                "extensions": [
                    ".f90",
                    ".f95",
                    ".f03",
                    ".f"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "FortranFixedForm",
                "extensions": [
                    ".f",
                    ".for",
                    ".f77"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "fortify.format",
                "title": "Format Fortran Code"
            }
        ],
        "keybindings": [
            {
                "command": "fortify.format",
                "key": "ctrl+shift+f",
                "when": "editorLangId == fortran"
            }
        ],
        "formatters": [
            {
                "language": "fortran",
                "command": "fortify.format"
            },
            {
                "command": "fortify.format",
                "key": "ctrl+shift+f",
                "when": "editorLangId == fortran-modern"
            },
            {
                "command": "fortify.format",
                "key": "ctrl+shift+f",
                "when": "editorLangId == FortranFreeForm"
            },
            {
                "command": "fortify.format",
                "key": "ctrl+shift+f",
                "when": "editorLangId == FortranFixedForm"
            }
        ]
    },

    "devDependencies": {}
}

