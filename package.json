{
    "name": "fortify",
    "displayName": "Fortify - Fortran Formatter",
    "description": "A powerful and simple Fortran formatting tool for Visual Studio Code.",
    "version": "0.1.0",
    "publisher": "LouOberto",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Formatting"
    ],
    "activationEvents": [
        "onLanguage:fortran"
    ],
    "main": "./source/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "fortran",
                "extensions": [
                    ".f90",
                    ".f95",
                    ".f03",
                    ".f"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "fortify.format",
                "title": "Fortify: Format Fortran Code"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.js",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "eslint": "^8.20.0",
        "typescript": "^4.9.5"
    }
}
